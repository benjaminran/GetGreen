<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.bran.intune.AnalysisView
            android:id="@+id/analysis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#8888F8"/>

    </HorizontalScrollView>

    <!--<com.bran.intune.Graph
        android:id="@+id/graph"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="16dp"
        android:background="#dddddd" />-->

    <ToggleButton android:id="@+id/graph_button"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textOff="Resume"
        android:textOn="Pause"/>

    <TextView
        android:id="@+id/analysis_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="6pt"
        android:text="Analysis text"
        android:background="#dddddd"
        android:scrollbars = "vertical"
        android:maxLines="100"/>
        <!--android:scrollbars = "vertical"
        android:maxLines="100"-->

    <TextView
        android:id="@+id/debug_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Debugging status text" />

    <com.bran.intune.TunerView
        android:id="@+id/tuner_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.bran.intune.LoudnessView
        android:id="@+id/loudness_view"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:background="@drawable/loudness_circle" />

    <!--<IconTextView
        android:text="{zmdi-android}"
