<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.bran.intune.AnalysisView
            android:id="@+id/analysis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </HorizontalScrollView>

    <com.bran.intune.Graph
        android:id="@+id/graph"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="16dp"/>

    <ToggleButton android:id="@+id/graph_button"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textOff=""
        android:textOn=""
        android:background="@mipmap/ic_mic_black_48dp"/>

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        android:src="@mipmap/ic_mic_black_48dp"
        fab:fab_colorNormal="@color/primary"
        fab:fab_colorPressed="@color/primary_pressed"
        fab:fab_colorRipple="@color/ripple" />

    <TextView
        android:id="@+id/analysis_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:textSize="6pt"
        android:text="Analysis text"
        android:background="#dddddd"
        android:scrollbars = "vertical"
        android:maxLines="100"/>
        <!--android:scrollbars = "vertical"
        android:maxLines="100"-->

    <ListView
        android:id="@+id/list"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"/>

    <TextView
        android:id="@+id/debug_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Debugging status text" />

    <com.bran.intune.TunerView
        android:id="@+id/tuner_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!--<com.bran.intune.LoudnessView
        android:id="@+id/loudness_view"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:background="@drawable/loudness_circle" />-->

